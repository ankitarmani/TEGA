<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/relativeLayoutCar"
    style="@style/ThemeStandard">
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/scrollViewCar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayoutAwards">
        <!--header -->
            <RelativeLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="fill_parent"
                android:id="@+id/relativeLayoutHeader"
                android:background="#a1a1a1"
                android:layout_height="50dp">
                <ImageView
                    android:src="@drawable/awards"
                    android:layout_width="35px"
                    android:layout_height="35px"
                    android:id="@+id/imageViewHeader"
                    android:layout_marginRight="10px"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true" />
                <TextView
                    android:text="AWARDS"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTitle"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    android:layout_toRightOf="@+id/imageViewHeader"
                    android:layout_centerVertical="true" />
                <Button
                    android:text="MENU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonMenu"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutAwardsContent">
                <TextView
                    android:text="SEE YOUR LATEST AWARDS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/green" />
            </RelativeLayout>
            <ScrollView
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/scrollView1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutLatestAwards"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:src="@drawable/badge1"
                        android:layout_width="80.0dp"
                        android:layout_height="80dp"
                        android:id="@+id/imageView2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />
                    <ImageView
                        android:src="@drawable/badge"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/imageView3" />
                </LinearLayout>
            </ScrollView>
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayoutAwardsNewBadges">
                <TextView
                    android:text="GET NEW BADGES"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/green" />
            </RelativeLayout>
            <ScrollView
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/scrollView2">
            <!--change the id names -->
                <RelativeLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayoutNewAwards"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:text="20000 Points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewLocked1"
                        android:layout_below="@+id/imageView2"
                        android:textColor="@color/green" />
                    <TextView
                        android:text="40000 Points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:layout_toRightOf="@+id/textViewLocked1"
                        android:layout_below="@+id/imageView3"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/green" />
                    <ImageView
                        android:src="@drawable/badge1Locked"
                        android:layout_width="80.0dp"
                        android:layout_height="80dp"
                        android:id="@+id/imageView2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/imageView3" />
                    <ImageView
                        android:src="@drawable/badge1Locked"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/imageView3" />
                </RelativeLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>